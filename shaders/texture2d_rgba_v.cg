void main(
	float3 position,
	float2 texcoord,
	float4 color,
	uniform float4x4 wvp,
	out float4 vPosition : POSITION,
	out float2 vTexcoord : TEXCOORD0,
	out float4 vColor : COLOR)
{
  float4x4 twvp = transpose(wvp);
	vPosition = mul(float4(position, 1.f), twvp);
	vTexcoord = texcoord;
	vColor = color;
}
